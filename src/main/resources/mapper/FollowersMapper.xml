    <select id="getAll" resultType="com.threeteam.sns.dto.FollowersDto">
			SELECT * FROM followers
	</select>
    	
    <select id="getById" parameterType="long" resultType="com.threeteam.sns.dto.FollowersDto">
			SELECT * FROM followers WHERE id = #{id}
	</select>

    <select id="getFolloweesByUser" parameterType="string" resultType="com.threeteam.sns.dto.FollowersDto">
        SELECT *
        FROM followers
        WHERE follower = #{userId}
        ORDER BY created_at DESC
    </select>

    <select id="getFollowersByUser" parameterType="string" resultType="com.threeteam.sns.dto.FollowersDto">
        SELECT *
        FROM followers
        WHERE followee = #{userId}
